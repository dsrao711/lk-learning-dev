<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/header') %>
</head>

<body>
  <!-- Sidebar -->
  <%- include('../partials/sidebar'); %>
    <div class="main-content" id="panel">
      <!-- Navbar -->
      <%- include('../partials/navbar'); %>
        <!-- Main content -->
        <div class="header bg-primary pb-6">
          <!-- Upper nav , Stats -->
          <div class="container-fluid">
            <div class="header-body">
              <div class="row align-items-center py-4">
                <!-- Upper Nav -->
                <div class="col-lg-6 col-7">
                  <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                  <!-- Upper Nav -->
                  <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                    <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                      <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                      <li class="breadcrumb-item"><a href="#">Materials</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Materials</li>
                    </ol>
                  </nav>
                </div>
                <div class="col-lg-6 text-right">
                  <form method="post" action="/">
                    <button type="submit" class="btn btn-lg btn-neutral text-dark">Export CSV</button>
                  </form>
                </div>
                <div class="col-lg-12">
                  <div class="row">
                    <div class="col">
                      <div class="card">
                        <!-- Card header -->
                        <div class="card-header border-0">
                          <h3 class="mb-0">Materials</h3>
                        </div>

                        <!-- Light table -->
                        <div class="table-responsive p-2">
                            <table class="table align-items-center table-flush">
                              <thead class="thead-light">
                                <tr>
                                  <th scope="col" class="sort" data-sort="name">Name</th>
                                  <th scope="col" class="sort" data-sort="budget">Type</th>
                                  <th scope="col" class="sort" data-sort="status">Cost Type</th>
                                  <th scope="col">Cost</th>
                                  <th scope="col">Author</th>
                                  <th scope="col">Semester</th>
                                  <th scope="col">Branch</th>
                                  <th scope="col">Course</th>
                                  <th scope="col">Manage</th>
                                </tr>
                              </thead>
                              <tbody class="list">
                                <% if (data.length){ var i=1 ; data.forEach(function(data){ %>
                                  <tr>
                                    <td class="budget">
                                      <%= data.material_name %>
                                    </td>
                                    <td class="budget">
                                      <%= data.material_acad_type %>
                                    </td>
                                    <td class="budget">
                                      <b><%= data.material_cost_type %></b>
                                    </td>
                                    <td class="budget">
                                        Rs.<%= data.material_cost %>
                                      </td>
 
                                    <td class="budget">
                                        <%= data.author_name %>
                                    </td>
                                    <td class="budget">
                                        <%= data.semester_name %>
                                    </td>
                                    <td class="budget">
                                        <%= data.branch_name %>
                                    </td>
                                    <td class="budget">
                                        <%= data.course_name %>
                                    </td>
                            
                                    <td class="manage">
                                      <a class="btn  btn-sm" href = "/materials/plans/<%= data.material_id %>"><i class="fa fa-tasks" style="color : #172b4d"></i></a>
                                    </td>
                                    
                                  </tr>
                                  
                                  <% }) %>
  
  
                                    <% } %>
                              </tbody>
                            </table>
                          </div>

                        <!-- Card footer -->
                        <div class="card-footer py-4">
                          <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                              <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                  <i class="fas fa-angle-left"></i>
                                  <span class="sr-only">Previous</span>
                                </a>
                              </li>
                              <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                              </li>
                              <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                              </li>
                              <li class="page-item"><a class="page-link" href="#">3</a></li>
                              <li class="page-item">
                                <a class="page-link" href="#">
                                  <i class="fas fa-angle-right"></i>
                                  <span class="sr-only">Next</span>
                                </a>
                              </li>
                            </ul>
                          </nav>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>


    </div>
    <!-- Modals -->

    <!-- Scripts -->
    <%- include('../partials/scripts'); %>
</body>

</html>